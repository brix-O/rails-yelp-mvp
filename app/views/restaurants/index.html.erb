<h1>Restaurants</h1>
<ul>
  <% @restaurants.each do |restaurant| %>
    <li><%= link_to restaurant.name, restaurant_path(restaurant) %></li>
    <li><%= restaurant.address %></li>
    <li><%= restaurant.category %></li>
    <hr/>
  <% end %>
</ul>
<p><%= link_to "Create a new restaurant", new_restaurant_path %></p>
